{
  "name": "remix-starter-vercel",
  "main": "index.js",
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "vercel",
    "dev": "npm run css:setup && concurrently \"remix run\" \"vercel dev\"",
    "build": "npm run css:build && remix build",
    "css:build": "postcss styles --base styles --dir app/ --env production",
    "css:setup": "postcss styles --base styles --dir app/"
  },
  "dependencies": {
    "@remix-run/cli": "^0.11.1",
    "@remix-run/data": "^0.11.1",
    "@remix-run/react": "^0.11.1",
    "@remix-run/vercel": "^0.11.1",
    "@tailwindcss/forms": "^0.2.1",
    "@vercel/node": "1.9.0",
    "autoprefixer": "^10.2.4",
    "postcss": "^8.2.5",
    "postcss-cli": "^8.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "tailwindcss": "^2.0.3"
  },
  "devDependencies": {
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "typescript": "^4.1.4",
    "vercel": "^21.2.3"
  },
  "engines": {
    "node": "12"
  }
}
